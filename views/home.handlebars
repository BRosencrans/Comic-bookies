<h1 id="welcome">Welcome to Comic Bookies</h1>

{{#each allPosts}}
<section class="post-box" id="posts">
    <h2 id="title-post">{{title}}</h2>
    <p id="post-text"> {{text}}</p>
    <h3 id="users">by:{{userName}} </h3>
    <input type="text" placeholder="comment" id="comment-text">
    <button id="comment-btn">submit</button>
    <p>{{allPosts.comment}}</p>
</section>
{{/each}}
<form action="" id="post-form">
  <h2 id="post-title">New Post</h2>
  <input type="text" placeholder="new post title" id="new-title">
  <input type="text" placeholder="new post" id="new-post">
  <button id="post-button" type="submit"> post </button>
</form>


<button id="upload_widget" class="cloudinary-button">Upload files</button>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script src = "/js/upload.js"></script>
<script src="/js/uploadPost.js"></script>

